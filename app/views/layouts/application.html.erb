<!DOCTYPE html>
<html>
  <head>
     

    <title>Blog</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all'%>
      <%= javascript_include_tag 'application' %>
  </head>

  <body>
    
<body>
<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
  <a href="#"> The Blog </a>
    <!-- <button class="navbar-toggler" type="button" data-toggler="collapse" data-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
    </button> -->
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav mr-auto"></ul>
       
        <li class="nav-item">
          <!-- nav_link, action, url, style  -->
          <%= link_to 'Home', welcome_index_path, class: "nav-link"%>
        </li>
       
        <li class="nav-item">
          <%= link_to 'Blog', articles_path, class: 'nav-link'%>
        </li>


       
       
        
        
         
          

          <% if current_user && current_user.admin? %>
            <li class="nav-item">
              <%= link_to 'Sign-Out', session_path('active'), method: :delete, class: 'nav-link'%>
            </li>
            <li class="nav-link">
              <p>Yo Admin! <br/> <%= current_user.userid %> </p>
            </li>

            <% elsif current_user %>
            <li class="nav-item">
              <%= link_to 'Sign-Out', session_path('active'), method: :delete, class: 'nav-link'%>
            </li>
             <li class="nav-item">
            <%= link_to "Support the Blog ($5)", new_braintree_path %>
            </li>
             <li class="nav-link">
              <p>Yo Normal User! <br/> <%= current_user.userid %> </p>
            </li>
             

              <% else %>
            <li class="nav-item">
              <%= link_to 'Sign-In', new_session_path, class: 'nav-link', id: "sign-in"%>
            </li>
            <li class="nav-item">
          <%= link_to 'Create Account', new_user_path, class: 'nav-link'%>
            </li>
            <li class="nav-item">
          <%= link_to "Support the Blog ($5)", new_braintree_path %>
          <!-- <a class ="nav-link" href="#"> Support the Blog </a>
        </li> -->
          </li>
              <% end %>

      </ul>
        <div class="form-inline mt-2 mt-md-0">
          <%= form_tag search_articles_path, method: :get do %>
          <%= text_field_tag :search, nil, placeholder: "Search", class: "form-control mr-sm-2"%>
          <%= submit_tag "Search", class: "btn btn'light my-2 my-sm-0" %>

      <%end%>
      
      </form>
    </div>
  </nav>
    <%= yield %>

   
  </body>
</html>
